<?xml version="1.0" encoding="utf-8"?>
<manifest
  xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.notihub.client"
  android:versionCode="1"
  android:versionName="1.0">
  <uses-sdk
    android:minSdkVersion="7"/>

  <application
    android:icon="@drawable/icon"
    android:label="@string/app_name"
    android:debuggable="true">
    <activity
      android:name=".NotihubActivity"
      android:label="@string/app_name">
      <intent-filter>
        <action
          android:name="android.intent.action.MAIN"/>
        <category
          android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity
      android:name="STSearchListActivity"
      android:label="@string/search_list_label"
      android:configChanges="keyboardHidden|orientation"
      android:screenOrientation="portrait">
    </activity>
    <activity
      android:name="STResultMapActivity"
      android:label="@string/search_result_map_label"
      android:theme="@android:style/Theme.NoTitleBar">
    </activity>
    <uses-library
      android:name="com.google.android.maps"/>
  </application>
  <uses-permission
    android:name="android.permission.INTERNET"></uses-permission>

</manifest>